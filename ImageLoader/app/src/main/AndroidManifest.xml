<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.reeuse.imageloader" >

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.reeuse.imageloader.GlideConfig"
            android:value="GlideModule" />

        <activity
            android:name=".GlideActivity"
            android:label="@string/title_activity_glide" >
        </activity>
        <activity
            android:name=".PicassoActivity"
            android:label="@string/title_activity_picasso" >
        </activity>
        <activity
            android:name=".FrescoActivity"
            android:label="@string/title_activity_fresco" >
        </activity>
    </application>

</manifest>
